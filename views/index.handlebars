

<div class="container">
  <div class="row">
    <div class="col-12">
    <div class="intro">
      <h1>Ice Cream Eater</h1>
      <p>Enter your favorite flavor. Then, click to devour it!</p>
    </div>
    </div>
    </div>
    <div class="row">
      <div class="col-6 uneaten-flavors">
      <h2>Uneaten ice cream flavors:</h2>
      <ul>
        {{#each icecream_data}} 
        {{#unless this.eaten}} 
       <div> {{this.id}}. {{this.cone_name}} </div>
        <form class="devour-form button-size">
          <input input type="hidden" class="icecream_id" type="text" value={{this.id}}><br>
          <button type="submit" class="btn btn-default devour" data-id="{{id}}">Devour it!</button>
        </form>

        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6 text-center eaten-flavors" class="task">
      <h2>Eaten ice cream flavors:</h2>
      {{#each icecream_data}}
      {{#if this.eaten}}
      <input class="form-control" type="text" placeholder="{{this.id}} . {{this.cone_name}}">
      {{/if}}
      {{/each}}
    </div>

  </div>
  
  <div class="row">
    <div class="col-12 add-flavor">
      <h2>Add a flavor to the list</h2><br>
      <form action="/flavors/create" method="POST">
        {{!-- or maybe instead of flavor_name it should be icecream_name --}}
        <input type="text" class="form-control" name="cone_name" value="" id="enter_text">
        <button type="submit" class="btn" id="submit-flavor">Add My Flavor!</button>
      </form>
    </div>
  </div>
      


